<h1>Create New Blogger</h1>

<% if @blogger.errors %>
  <ul>
  <% @blogger.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br><br>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br><br>
  <%= f.submit %>
<% end %>