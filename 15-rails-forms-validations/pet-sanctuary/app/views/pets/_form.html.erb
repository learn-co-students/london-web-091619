<!-- Check if the instance of pet we are attempting to create or update has any validation errors. -->
<% if @pet.errors.full_messages.length > 0 %>
  <!-- Iterate through the full messages of each error attached to the instance of pet and create a li for each one with the value of the error message injected into it. -->
  <h2><%= pluralize(@pet.errors.full_messages.length , "error") %> prohibited this pet from being created:</h2>
  <ul>
    <% @pet.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@pet) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.collection_select(:user_id, User.all, :id, :username) %>

  <%= f.submit %>
<% end %>
